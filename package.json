{
    "name": "matlab-runner",
    "displayName": "Matlab Runner",
    "description": "Run selected MATLAB code",
    "version": "0.1.0",
    "publisher": "eamonbell",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.runSelection"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.runSelection",
                "title": "Matlab: Run Selection"
            }
        ],
        "configuration":[
            {
                "title": "Matlab Runner Configuration",
                "type": "object",
                "properties": {
                    "matlab-runner.matlabPath": {
					    "type": "string",
					    "default": null,
					    "description": "The path to the matlab executable."
                    },
                    "matlab-runner.tempFilePath": {
					    "type": "string",
					    "default": null,
					    "description": "The path to the temporary matlab file used for execution"
				    }
                }
            }
        ]
    },
    "icon": "images/icon.png",
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
